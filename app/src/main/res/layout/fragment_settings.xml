<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Video Preview Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_video_preview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/video_preview_container"
                    android:layout_width="0dp"
                    android:layout_height="240dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <VideoView
                        android:id="@+id/video_preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />

                </FrameLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_pick_video"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pick_video"
                    app:layout_constraintTop_toBottomOf="@id/video_preview_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Settings Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/card_video_preview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">



                <!-- Playback Mode -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/playback_mode_setting"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:visibility="visible" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/playback_mode_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    app:chipSpacingHorizontal="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/playback_mode_loop"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/playback_mode_loop"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/playback_mode_oneshot"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/playback_mode_oneshot"/>

                </com.google.android.material.chip.ChipGroup>

                <!-- Status Bar color -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/status_bar_icons_label"
                    android:textAppearance="?attr/textAppearanceBody1" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/status_bar_color_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    app:chipSpacingHorizontal="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/status_bar_auto"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/status_bar_auto" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/status_bar_light"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_bar_white_icons" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/status_bar_dark"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_bar_black_icons" />

                </com.google.android.material.chip.ChipGroup>

                <!-- Audio Toggle -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_audio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_audio_enabled"
                    android:checked="false"/>

                <!-- Accordion for advanced settings -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/accordion_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/material_on_surface_stroke"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layout_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/advanced"
                                android:textAppearance="?attr/textAppearanceSubtitle1"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/image_arrow"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_arrow_drop_down_24"
                                app:tint="?attr/colorControlNormal" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/advanced_options_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="16dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/scaling_mode_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:text="@string/scaling_mode"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:textColor="?android:attr/textColorSecondary"/>

                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/scaling_mode_group"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:paddingBottom="8dp"
                                app:selectionRequired="true"
                                app:singleSelection="true">

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/scaling_mode_fit"
                                    style="@style/Widget.MaterialComponents.Chip.Choice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/scaling_mode_fit" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/scaling_mode_fill"
                                    style="@style/Widget.MaterialComponents.Chip.Choice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/scaling_mode_fill" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/scaling_mode_stretch"
                                    style="@style/Widget.MaterialComponents.Chip.Choice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/scaling_mode_stretch" />
                            </com.google.android.material.chip.ChipGroup>

                            <TextView
                                android:text="@string/horizontal_position"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:textColor="?android:attr/textColorSecondary"/>

                            <com.google.android.material.slider.Slider
                                android:id="@+id/position_x_slider"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:valueFrom="-1"
                                android:valueTo="1"
                                android:value="0.0"
                                android:stepSize="0.025" />

                            <TextView
                                android:text="@string/vertical_position"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:textColor="?android:attr/textColorSecondary"/>

                            <com.google.android.material.slider.Slider
                                android:id="@+id/position_y_slider"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:valueFrom="-1"
                                android:valueTo="1"
                                android:value="0.0"
                                android:stepSize="0.025" />

                            <TextView
                                android:text="@string/zoom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:textColor="?android:attr/textColorSecondary"/>

                            <com.google.android.material.slider.Slider
                                android:id="@+id/zoom_slider"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:valueFrom="0.5"
                                android:valueTo="2.0"
                                android:value="1.0"
                                android:stepSize="0.05" />

                            <TextView
                                android:text="@string/rotation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:textColor="?android:attr/textColorSecondary"/>

                            <com.google.android.material.slider.Slider
                                android:id="@+id/rotation_slider"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:valueFrom="0.0"
                                android:valueTo="360.0"
                                android:value="1.0"
                                android:stepSize="1.0" />

                            <TextView
                                android:text="@string/brightness"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:textColor="?android:attr/textColorSecondary"/>

                            <com.google.android.material.slider.Slider
                                android:id="@+id/brightness_slider"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:valueFrom="0.0"
                                android:valueTo="2.0"
                                android:value="1.0"
                                android:stepSize="0.1" />



                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/button_reset_advanced"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:text="@string/reset"
                                android:textColor="?attr/colorPrimary" />

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Video Trim Controls (Feature disabled) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/trim_video"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:visibility="gone" />

                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/trim_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:valueFrom="0.0"
                    android:valueTo="100.0"
                    android:visibility="gone"
                    app:values="@array/initial_range_slider_values" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textAppearance="?attr/textAppearanceCaption"
                        tools:text="00:00:00.000" />

                    <TextView
                        android:id="@+id/tvEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textAppearance="?attr/textAppearanceCaption"
                        tools:text="00:00:15.000" />

                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_apply_trim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:text="@string/apply_trim"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:indeterminate="true"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <!-- Recent Files -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/recent_files"
                    android:textAppearance="?attr/textAppearanceTitleMedium" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_recent_files"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>